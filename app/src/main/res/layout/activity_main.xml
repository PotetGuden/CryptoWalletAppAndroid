<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/ic_main_background">

    <TextView
        android:id="@+id/tmpId"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="HELLO WORLD"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:id="@+id/image"
        android:layout_height="30dp"
        android:layout_width="30dp"
        android:scaleType="fitCenter"
        app:layout_constraintTop_toTopOf="@+id/usersChoiceCoinTmpId"
        app:layout_constraintRight_toLeftOf="@+id/usersChoiceCoinTmpId"
        android:layout_marginEnd="10dp"
        />
    <ImageView
        android:id="@+id/image2"
        android:layout_height="30dp"
        android:layout_width="30dp"
        android:scaleType="fitCenter"
        app:layout_constraintTop_toTopOf="@+id/directlySpecificCoinTmpId"
        app:layout_constraintRight_toLeftOf="@+id/directlySpecificCoinTmpId"
        android:layout_marginEnd="10dp"
        />

    <ImageView
        android:id="@+id/image3"
        android:layout_height="30dp"
        android:layout_width="30dp"
        android:scaleType="fitCenter"
        app:layout_constraintTop_toTopOf="@+id/tmpId"
        app:layout_constraintRight_toLeftOf="@+id/tmpId"
        android:layout_marginEnd="10dp"
        />
    <TextView

        android:id="@+id/directlySpecificCoinTmpId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HELLO WORLD"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.441" />

    <TextView
        android:id="@+id/usersChoiceCoinTmpId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HELLO WORLD"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.389" />


    <TextView
        android:id="@+id/directlySpecificCoinTmpIdValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="COIN VALUE"
        app:layout_constraintBottom_toBottomOf="@+id/directlySpecificCoinTmpId"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/directlySpecificCoinTmpId"
        app:layout_constraintTop_toTopOf="@+id/directlySpecificCoinTmpId"
        app:layout_constraintVertical_bias="0.389" />


    <TextView
        android:id="@+id/header_title"
        android:layout_width="match_parent"
        android:gravity="center"
        android:textStyle="bold"
        android:background="@color/header_color"
        android:layout_height="125dp"
        android:text="CRYPTO WALLET"
        android:textSize="30sp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/currency_fragment_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/user_balance"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:text="Balance: 10000$"
        android:textSize="30sp"

        android:layout_marginBottom="10dp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/header_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <FrameLayout
        android:id="@+id/currency_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header_title" />


</androidx.constraintlayout.widget.ConstraintLayout>